extends ./layout.jade

block vars
  - var title = 'Login'

block content
  h1 Log Into Your Account

  if error
    p ERROR: #{error}

  form(method="post")
    input(type="hidden", name="_csrf", value=csrfToken)

    span Username:
    input(type="text", name="username", required=true)
    br

    span Password:
    input(type="password", name="password", required=true)
    br

    input(type="submit")